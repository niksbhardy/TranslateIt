{
  "manifest_version": 2,
  "name": "TranslateIt",
  "version":"1.0",
  "description": "TranslateIt gives the hindi meaning of the selected text on the screen",
  "icons": {
    "128": "icons/translateit48.png",
    "48": "icons/translateit48.png",
    "16": "icons/translateit16.png"
  },
  "browser_action": {
    "default_icon": "icons/translateit48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "http://*/",
    "https://*/"
  ]
}